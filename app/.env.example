# Application Environment
NODE_ENV=development

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://user:password@localhost:5432/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/dumpster_rental

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Example: https://dumpsters.com,https://www.dumpsters.com,http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000

# Email Configuration
# For Resend Email Service (recommended)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Fallback: For SMTP configuration (e.g., Gmail, Mailgun, SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Addresses
EMAILS_FROM_ADDRESS=noreply@dumpsters.com
ADMIN_EMAIL=admin@dumpsters.com

# API Configuration
# Rate limiting window in milliseconds
RATE_LIMIT_WINDOW_MS=3600000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_RATE_LIMITING=true

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_SEGMENT_KEY=

# External Services (Optional)
# Slack webhook for notifications
SLACK_WEBHOOK_URL=
# CRM integration
CRM_API_KEY=
CRM_API_URL=

# Logging
LOG_LEVEL=info
